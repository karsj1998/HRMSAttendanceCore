@model IEnumerable<EmployeeAttendance.Models.Attendance>

@{
    ViewData["Title"] = "All Attendance";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
        <i class="fas fa-calendar-check text-primary me-3"></i>All Attendance Records
    </h1>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">
            <i class="fas fa-plus me-2"></i>Add Attendance
        </a>
        <a asp-action="Weekly" class="btn btn-info me-2">
            <i class="fas fa-calendar-week me-2"></i>Weekly View
        </a>
        <a asp-action="Monthly" class="btn btn-warning">
            <i class="fas fa-calendar-alt me-2"></i>Monthly View
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Employee</th>
                        <th>Date</th>
                        <th>Check In</th>
                        <th>Check Out</th>
                        <th>Work Hours</th>
                        <th>Status</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                        @item.Employee.FirstName[0]@item.Employee.LastName[0]
                                    </div>
                                    <div>
                                        <strong>@item.Employee.FullName</strong><br>
                                        <small class="text-muted">@item.Employee.EmployeeId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <strong>@item.Date.ToString("MMM dd, yyyy")</strong><br>
                                    <small class="text-muted">@item.Date.DayOfWeek</small>
                                </div>
                            </td>
                            <td>
                                @if (item.CheckInTime.HasValue)
                                {
                                    <span class="text-success">
                                        <i class="fas fa-sign-in-alt me-1"></i>
                                        @item.CheckInTime.Value.ToString("HH:mm")
                                    </span>
                                    @if (item.IsLate)
                                    {
                                        <br><small class="text-warning"><i class="fas fa-exclamation-triangle"></i> Late</small>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.CheckOutTime.HasValue)
                                {
                                    <span class="text-info">
                                        <i class="fas fa-sign-out-alt me-1"></i>
                                        @item.CheckOutTime.Value.ToString("HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (item.WorkHours.HasValue)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-clock me-1"></i>
                                        @item.WorkHours.Value.ToString(@"hh\:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @{
                                    var statusClass = item.Status switch
                                    {
                                        "Present" => "bg-success",
                                        "Late" => "bg-warning",
                                        "Absent" => "bg-danger",
                                        "Half-day" => "bg-info",
                                        "Leave" => "bg-secondary",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">
                                    <i class="fas fa-circle me-1"></i>
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Notes))
                                {
                                    <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@item.Notes">
                                        @item.Notes
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-calendar-times fa-5x text-muted mb-3"></i>
        <h3 class="text-muted">No Attendance Records Found</h3>
        <p class="text-muted">Start by adding attendance records for your employees.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add First Attendance Record
        </a>
    </div>
}

<!-- Summary Statistics -->
@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(a => a.Status == "Present")</h4>
                    <small>Present Records</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(a => a.Status == "Late")</h4>
                    <small>Late Records</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(a => a.Status == "Absent")</h4>
                    <small>Absent Records</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>@Model.Where(a => a.WorkHours.HasValue).Sum(a => a.WorkHours.Value.TotalHours).ToString("F1")</h4>
                    <small>Total Hours</small>
                </div>
            </div>
        </div>
    </div>
}