@model EmployeeAttendance.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    <i class="fas fa-id-card text-info me-2"></i>Employee Details
                </h3>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-2">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Full Name</label>
                        <div class="fw-bold">@Model.FullName</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Employee ID</label>
                        <div class="fw-bold"><span class="badge bg-secondary">@Model.EmployeeId</span></div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Email</label>
                        <div><a href="mailto:@Model.Email">@Model.Email</a></div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Department</label>
                        <div><span class="badge bg-info">@Model.Department</span></div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Position</label>
                        <div>@Model.Position</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Hire Date</label>
                        <div>@Model.HireDate.ToString("MMM dd, yyyy")</div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="text-muted">Status</label>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="fas fa-times-circle me-1"></i>Inactive</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>