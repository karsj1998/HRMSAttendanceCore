@model IEnumerable<EmployeeAttendance.Models.SalaryStructure>
@{
	ViewData["Title"] = "Salary Structures";
}
<div class="row">
	<div class="col-12 d-flex justify-content-between align-items-center mb-3">
		<h2 class="mb-0"><i class="fas fa-sack-dollar me-2"></i>Salary Structures</h2>
		<a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Create</a>
	</div>
	<div class="col-12">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Employee</th>
					<th>Effective From</th>
					<th class="text-end">Basic</th>
					<th class="text-end">HRA</th>
					<th class="text-end">DA</th>
					<th class="text-end">Other Allowances</th>
					<th class="text-end">Deductions</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var s in Model)
				{
					<tr>
						<td>@s.Employee?.FullName (@s.EmployeeId)</td>
						<td>@s.EffectiveFrom.ToString("yyyy-MM-dd")</td>
						<td class="text-end">@s.Basic.ToString("C")</td>
						<td class="text-end">@s.Hra.ToString("C")</td>
						<td class="text-end">@s.DearnessAllowance.ToString("C")</td>
						<td class="text-end">@s.OtherAllowances.ToString("C")</td>
						<td class="text-end">@s.Deductions.ToString("C")</td>
						<td class="text-end">
							<a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-secondary me-2"><i class="fas fa-edit"></i></a>
							<a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>